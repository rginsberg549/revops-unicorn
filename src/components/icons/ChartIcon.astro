---
// Balanced Client Mix / Chart icon
interface Props {
  class?: string;
}
const { class: className = "w-8 h-8" } = Astro.props;
---

<svg class={className} viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect x="4" y="4" width="24" height="24" rx="3" fill="#1a365d" opacity="0.1"/>
  <!-- Bars -->
  <rect x="7" y="16" width="4" height="10" rx="1" fill="#1a365d" opacity="0.5"/>
  <rect x="14" y="10" width="4" height="16" rx="1" fill="#1a365d"/>
  <rect x="21" y="13" width="4" height="13" rx="1" fill="#1a365d" opacity="0.7"/>
  <!-- Gold trend line -->
  <path d="M7 18l7-6 7 4" stroke="#c9a227" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  <circle cx="24" cy="16" r="2" fill="#c9a227"/>
</svg>
