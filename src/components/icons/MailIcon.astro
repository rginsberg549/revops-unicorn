---
interface Props {
  class?: string;
}

const { class: className = "w-5 h-5" } = Astro.props;
---

<svg class={className} viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Envelope body -->
  <rect x="2" y="4" width="20" height="16" rx="2" fill="currentColor" opacity="0.15"/>
  <rect x="2" y="4" width="20" height="16" rx="2" fill="none" stroke="currentColor" stroke-width="1.5"/>
  <!-- Envelope flap with gold accent -->
  <path d="M2 6l10 7 10-7" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
  <!-- Gold seal -->
  <circle cx="12" cy="14" r="3" fill="#c9a227"/>
  <path d="M10.5 14l1 1 2-2" stroke="white" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
</svg>
