---
interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<svg class:list={["w-8 h-8 flex-shrink-0", className]} viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Shield shape -->
  <path d="M16 3L5 8v8c0 7.2 4.7 13.3 11 15 6.3-1.7 11-7.8 11-15V8L16 3z" stroke="#1a365d" stroke-width="1.5" fill="none"/>
  <!-- Inner shield highlight -->
  <path d="M16 6L8 9.5v6c0 5.4 3.4 10 8 11.5 4.6-1.5 8-6.1 8-11.5v-6L16 6z" fill="#c9a227" opacity="0.1"/>
  <!-- Gold checkmark -->
  <path d="M11 15.5l3.5 3.5 6.5-7" stroke="#c9a227" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
</svg>
