---
// Technology Consultants icon - laptop/code
interface Props {
  class?: string;
}
const { class: className = "w-8 h-8" } = Astro.props;
---

<svg class={className} viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Laptop -->
  <rect x="5" y="8" width="18" height="12" rx="2" fill="#1a365d" opacity="0.15"/>
  <rect x="5" y="8" width="18" height="12" rx="2" fill="none" stroke="#1a365d" stroke-width="1.5"/>
  <!-- Screen content - code brackets -->
  <path d="M10 12l-2 2 2 2M18 12l2 2-2 2" stroke="#1a365d" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  <!-- Base -->
  <path d="M3 22h22" stroke="#1a365d" stroke-width="1.5" stroke-linecap="round"/>
  <!-- Disconnected arrow showing lack of purpose -->
  <circle cx="26" cy="14" r="4" fill="#1a365d" opacity="0.2"/>
  <path d="M24 14h4M26 12v4" stroke="#1a365d" stroke-width="1.5" stroke-linecap="round" opacity="0.5"/>
