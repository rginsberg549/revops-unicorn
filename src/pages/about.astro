---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import CheckIcon from '../components/icons/CheckIcon.astro';

const differentiators = [
  { title: "Industry Specialists", desc: "Exclusive focus on accounting and professional services" },
  { title: "Implementation Partners", desc: "We do the work with you, not just advise" },
  { title: "Honest Assessment", desc: "We'll tell you the truth, even when it's hard to hear" },
];

const whyDifferent = [
  {
    title: "We don't just advise‚Äîwe partner",
    desc: "Other advisors give you a plan and wish you luck. We roll up our sleeves and help you execute every element of your transformation.",
  },
  {
    title: "We honor all your stakeholders",
    desc: "Legacy matters. We help you structure transitions that protect the client relationships you've nurtured and the team you've built.",
  },
  {
    title: "We succeed when your practice thrives",
    desc: "Our Transition Partnership means we only succeed when you do. Your successful exit is our best marketing.",
  },
];

const promises = [
  {
    icon: "üéØ",
    title: "Radical Honesty",
    promise: "We'll tell you the truth about your practice's exit-readiness‚Äîeven when it's hard to hear. No sugar-coating, no false promises.",
  },
  {
    icon: "üõ†Ô∏è",
    title: "Implementation Partners",
    promise: "We implement alongside you, not just advise from the sidelines. We roll up our sleeves and do the work with you.",
  },
  {
    icon: "ü§ù",
    title: "Aligned Incentives",
    promise: "Your success is our success. Our Transition Partnership is success-fee based‚Äîwe only win when you do.",
  },
];

const stats = [
  { value: "20+", label: "Years Combined Experience" },
  { value: "12-18mo", label: "Typical Engagement" },
];
---

<Layout
  title="About | RevOps Unicorn"
  description="We've walked this path ourselves. Learn about RevOps Unicorn's approach to accounting practice exit preparation‚Äîhonest, hands-on, and stakeholder-focused."
>
  <Navigation />

  <!-- Hero -->
  <section class="pt-28 pb-16 bg-navy">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <div class="mb-6">
        <nav class="text-sm text-white/50" aria-label="Breadcrumb">
          <ol class="flex items-center gap-2">
            <li><a href="/" class="hover:text-white/70 transition-colors">Home</a></li>
            <li class="text-white/30">/</li>
            <li class="text-white font-medium">About</li>
          </ol>
        </nav>
      </div>
      <h1 class="text-3xl md:text-4xl lg:text-5xl text-white font-serif mb-4">
        We've Walked This Path <span class="text-gold">Ourselves</span>
      </h1>
      <p class="text-xl text-white/80 leading-relaxed max-w-3xl">
        RevOps Unicorn was founded by professionals who've spent decades in accounting
        and professional services‚Äîand who understand that exiting a practice is about
        far more than money.
      </p>
    </div>
  </section>

  <!-- About Content -->
  <section class="py-20 lg:py-24 bg-cream">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <span class="text-gold font-medium text-sm tracking-wider uppercase">Our Story</span>
          <h2 class="text-2xl md:text-3xl text-navy mt-3 mb-6 font-serif">
            Built for Accounting Practice Owners
          </h2>
          <p class="text-charcoal/80 text-lg leading-relaxed mb-6">
            We combine deep industry expertise with modern revenue operations methodology
            to help firm owners maximize their exit value while protecting what matters‚Äîtheir
            clients, their team, and their legacy.
          </p>
          <p class="text-charcoal/80 text-lg leading-relaxed mb-8">
            Every service we offer was designed around what acquirers actually look for
            and what practice owners actually need. No theoretical frameworks. No one-size-fits-all
            playbooks. Just practical transformation grounded in real market data.
          </p>

          <div class="space-y-4">
            {differentiators.map((item) => (
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-gold/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <CheckIcon class="text-gold" />
                </div>
                <div>
                  <div class="text-navy font-semibold">{item.title}</div>
                  <div class="text-charcoal/70 text-sm">{item.desc}</div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <div class="bg-white rounded-lg p-8 border border-navy/10">
          <h3 class="text-2xl font-semibold text-navy mb-6 font-serif">Why We're Different</h3>
          <div class="space-y-6">
            {whyDifferent.map((item, index) => (
              <div>
                <div class="text-gold font-semibold mb-2">{item.title}</div>
                <p class="text-charcoal/70 text-sm">{item.desc}</p>
                {index < whyDifferent.length - 1 && <div class="h-px bg-navy/10 mt-6"></div>}
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Promises -->
  <section class="py-20 lg:py-24 bg-navy">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl text-white mb-4 font-serif">What We Promise</h2>
        <p class="text-white/70">Our commitments to every practice owner we work with</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {promises.map((p) => (
          <div class="bg-white/10 backdrop-blur rounded-lg p-8">
            <div class="text-4xl mb-4">{p.icon}</div>
            <h3 class="text-xl font-semibold text-white mb-3 font-serif">{p.title}</h3>
            <p class="text-white/80 leading-relaxed">{p.promise}</p>
          </div>
        ))}
      </div>

      <div class="mt-16 flex justify-center gap-16">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="text-4xl font-bold text-white mb-1 font-serif">{stat.value}</div>
            <div class="text-white/60 text-sm">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 lg:py-24 bg-cream">
    <div class="max-w-3xl mx-auto px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl text-navy mb-4 font-serif">
        Ready to Protect What You've Built?
      </h2>
      <p class="text-charcoal/80 text-lg mb-8 max-w-2xl mx-auto">
        Schedule a complimentary 30-minute conversation. We'll listen to where you are
        and help you think through your options‚Äîwhether that involves us or not.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact/" class="px-8 py-4 bg-gold hover:bg-gold/90 text-white font-medium rounded transition-all shadow-md">
          Get in Touch
        </a>
        <a href="/services/" class="px-8 py-4 border-2 border-navy hover:bg-navy hover:text-white text-navy font-medium rounded transition-all">
          Explore Our Services
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
